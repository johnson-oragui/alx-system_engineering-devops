#!/usr/bin/env bash
#Install nginx web server and Redirection
#sudo apt-get -y update
#sudo apt-get -y uninstall nginx
sudo apt-get -y install nginx
sudo service nginx start
sudo ufw allow 'Nginx HTTP'
#sudo touch /var/www/html/index.html
#sudo chmod 766 /var/www/html/index.html
#echo "Hello World!" > /var/www/html/index.html
sudo sed -i 's/location \/ {/location \/redirect_me {/g' /etc/nginx/sites-enabled/default
sudo sed -i 's|try_files $uri $uri/ =404;|rewrite ^/redirect_me$ https://www.youtube.com/watch?v=QH2-TGUlwu4 permanent;|g' /etc/nginx/sites-available/default
sudo nginx -t
sudo service nginx restart
